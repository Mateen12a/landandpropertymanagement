        <form class="form--login">
          <div class="form-group">
              <label for="email">Email address</label>
              <div class="input-group">
                  <div class="input-group-prepend">
                      <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                  </div>
                  <input id="email" name="email" class="form-control" placeholder="Email address" type="email">
              </div>
          </div> <!-- form-group// -->
      
          <div class="form-group">
              <label for="password">Password</label>
              <div class="input-group">
                  <div class="input-group-prepend">
                      <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                  </div>
                  <input id="password" name="password" class="form-control" placeholder="Password" type="password" minlength="8">
              </div>
          </div> <!-- form-group// --> 
      
          <div class="form-group text-center">
              <button type="submit" class="btn--login w-100 btn btn-primary btn-block btn--login">Sign In</button>
          </div> <!-- form-group// -->      
      
          <p class="text-center">Don't have an account? <a href="/register">Register</a></p>                                                                 
      </form>
      
    </article>
